
<div class="row">
    <div class="col-md-12"> 
        <h1>{{viewData.employee.firstName}} {{viewData.employee.last_name}} - Employee: {{viewData.employee.employeeNum}}</h1>
        <form method="POST" action="/employee/update">
        <fieldset>
            <legend>Personal Information</legend>
            <input type="hidden" name="employeeNum" value="{{viewData.employee.employeeNum}}">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="firstName">First Name:</label>
                        <input class="form-control" id="firstName" name="firstName" type="text" value="{{viewData.employee.firstName}}" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="last_name">Last Name:</label>
                        <input class="form-control" id="last_name" name="last_name" type="text" value="{{viewData.employee.last_name}}" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input class="form-control" id="email" name="email" type="email" value="{{viewData.employee.email}}" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="SSN">Social Security Number (SSN):</label>
                        <input class="form-control" id="SSN" name="SSN" type="text" value="{{viewData.employee.SSN}}" readonly />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addressStreet">Address:</label>
                        <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{viewData.employee.addressStreet}}" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addresCity">City:</label>
                        <input class="form-control" id="addrescity" name="addresCity" type="text" value="{{viewData.employee.addresCity}}" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addressState">State:</label>
                        <input class="form-control" id="addressState" name="addressState" type="text" value="{{viewData.employee.addressState}}" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addressPostal">ZIP Code:</label>
                        <input class="form-control" id="addressPostal" name="addressPostal" type="text" value="{{viewData.employee.addressPostal}}" />
                    </div>
                </div>
            </div>

            <legend>Company Information</legend>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="isManager">Manager:</label>
                        <input class="form-control" id="isManager" name="isManager" type="checkbox" {{#if viewData.employee.isManager}} checked {{/if}} />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="employeeManagerNum">Manager's Number:</label>
                        <input class="form-control" id="employeeManagerNum" name="employeeManagerNum" type="number" value="{{viewData.employee.employeeManagerNum}}" />
                    </div>
                </div> 
                <div class="col-md-3"> 
                    <div class="form-group">
                        <label for="status">Status:</label><br>
                        <label class="checkbox-inline">
                            <input type="radio" id="status" name="status" value="Full Time" {{#equal viewData.employee.status "Full Time"}}checked{{/equal}} /> Full Time
                        </label>

                        <label class="checkbox-inline">
                            <input type="radio" id="status" name="status" value="Part Time"  {{#equal viewData.employee.status "Part Time"}}checked{{/equal}}/> Part Time
                        </label>
                    </div>
                </div>
               
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="department">Department:</label>
                        {{#if viewData.departments}}
                        <select class="form-control" name="department" id="department">
                            {{#each viewData.departments}}
                            <option value="{{departmentId}}" {{#if selected}} selected {{/if}}>{{departmentName}}</option>
                            {{/each}}
                        </select>
                        {{else}}
                        <div>No Departments</div>
                        {{/if}}
                    </div>
                </div>
                <div class="col-md-12"> 
                    <div class="form-group">
                        <label for="hireDate">Hire Date:</label>
                        <input class="form-control" id="hireDate" name="hireDate" type="text" value="{{viewData.employee.hireDate}}" readonly />
                    </div>
                </div>
            </div>
        </fieldset>
        <hr />
        <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
        </form> 
    </div>
</div>