<div class="row">
 <div class="col-md-12">
 <h2>Employees</h2>
 <hr />


 <div class="table-responsive">
            <table class="table ">
                 <tr>
    <th>Employee Num</th>
    <th>Full Name</th>
    <th>Email</th>
    <th>Address</th>
    <th>Manager ID</th>
    <th>Status</th>
    <th>Department</th>
    <th>Hired On</th>
    </tr>
    {{#each employees}}
    <tr>

        <td>{{employeeNum}}</td>
        
        <td><a href= "/employee/{{employeeNum}}">{{firstName}} &nbsp;{{lastName}}</a></td>
        
        <td><a href="mailto:{{email}}">{{email}}</a></td><!-- directly mails -->

        <td>{{addressStreet}},

      {{addressState}},
      {{addressPostal}}</td>
      <td><a href="/employees?manager={{employeeManagerNum}}">{{employeeManagerNum}}</a></td>
        <td><a href="/employees?status={{status}}">{{status}}</a></td>
        <td><a href="/employees?department={{department}}">{{department}}</a></td>
        <!-- these 3 are query redirections -->

        <td>{{hireDate}}</td>
{{else}}
     
        <div class="col-md-12 text-center">
 <strong>{{message}}</strong>
</div>
     </tr>
     {{/each}}
 </div>
</div>

<!-- Dont forget the /each to end the iteration -->
